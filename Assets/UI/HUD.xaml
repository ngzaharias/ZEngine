<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1920"
  d:DesignHeight="1080" Style="{DynamicResource Style.Page}" d:DataContext="DCHud.Default">
  <Page.Resources>
    <ResourceDictionary>
      <DataTemplate x:Key="Template.Ability">
        <Button Content="{Binding Name}" Width="120" Height="160" Style="{DynamicResource Style.Button}"/>
      </DataTemplate>
      <ItemsPanelTemplate x:Key="Template.AbilityList">
        <UniformGrid Rows="1">
        </UniformGrid>
      </ItemsPanelTemplate>
    </ResourceDictionary>
  </Page.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="5*"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>
    <Border Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" CornerRadius="4,4,4,4" BorderThickness="2,2,2,2" Margin="0,0,0,100">
      <ItemsControl x:Name="AbilityList" ItemsSource="{Binding Abilities}" ItemTemplate="{StaticResource Template.Ability}" ItemsPanel="{DynamicResource Template.AbilityList}"/>
    </Border>
  </Grid>
</Page>