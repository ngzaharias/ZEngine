<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:noesis="clr-namespace:NoesisGUIExtensions" 
  mc:Ignorable="d" 
  Style="{DynamicResource Style.Page}" 
  d:DesignWidth="1280" 
  d:DesignHeight="720">
  <Grid Background="{DynamicResource Brush.Background0}">
    <Viewbox>
      <Grid Width="1280" Height="720">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="2*"/>
          <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="3*"/>
          <RowDefinition Height="2*"/>
          <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Loading..." HorizontalAlignment="Center" VerticalAlignment="Top" Style="{DynamicResource Style.SubHeader.Text}" FontSize="32" Grid.Column="1" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Style="{DynamicResource Style.SubHeader.Text}" FontSize="20" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0.082,0,0" Text="Hint:"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Style="{DynamicResource Style.SubHeader.Text}" FontSize="20" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=Hint}" TextAlignment="Center" Margin="0,0.082,0,0"/>
      </Grid>
    </Viewbox>
  </Grid>
</Page>