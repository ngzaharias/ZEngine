<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1920"
  d:DesignHeight="1080">
  <Page.Background>
    <SolidColorBrush Color="#FF4D5052" Opacity="0"/>
  </Page.Background>
  <Page.Resources>
    <ResourceDictionary>
      <Style x:Key="ButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Padding" Value="16,16,16,16"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Super Fortrees"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="Margin" Value="8,8,8,8"/>
        <Setter Property="Background">
          <Setter.Value>
            <SolidColorBrush Color="#FFFFFFFF"/>
          </Setter.Value>
        </Setter>
        <Setter Property="Foreground">
          <Setter.Value>
            <SolidColorBrush Color="#FF000000"/>
          </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
          <Setter.Value>
            <SolidColorBrush Color="#FF000000"/>
          </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="8,8,8,8"/>
      </Style>
    </ResourceDictionary>
  </Page.Resources>
  <Grid>
    <Grid.Background>
      <SolidColorBrush Color="#FF000000" Opacity="0.5"/>
    </Grid.Background>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*"/>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="2*"/>
    </Grid.ColumnDefinitions>
    <StackPanel VerticalAlignment="Center" Margin="0" Grid.Column="1">
      <Button x:Name="Resume" Style="{DynamicResource ButtonStyle}" Command="{Binding Path=ResumeCommand}" Content="Resume"/>
      <Button x:Name="Settings" Content="Settings" Style="{DynamicResource ButtonStyle}" Command="{Binding SettingsCommand}"/>
      <Button x:Name="ExitToMenu" Style="{DynamicResource ButtonStyle}" Command="{Binding Path=ExitToMenuCommand}" Content="Exit to Menu"/>
      <Button x:Name="ExitGame" Style="{DynamicResource ButtonStyle}" Command="{Binding ExitGameCommand}" Content="Exit Game"/>
    </StackPanel>
  </Grid>
</Page>