<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:noesis="clr-namespace:NoesisGUIExtensions" 
  mc:Ignorable="d" 
  Style="{DynamicResource Style.Page}" 
  d:DesignWidth="1280" 
  d:DesignHeight="720" Focusable="True">
  <Page.InputBindings>
    <KeyBinding Key="Escape" Command="{Binding CloseCommand}"/>
    <KeyBinding Key="Space" Command="{Binding CloseCommand}"/>
    <MouseBinding MouseAction="LeftClick" Command="{Binding CloseCommand}"/>
  </Page.InputBindings>
  <Grid Background="{DynamicResource Brush.Background0}">
    <Viewbox>
      <Grid Width="1280" Height="720">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="2*"/>
          <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="1*"/>
          <RowDefinition Height="2*"/>
          <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Developer" TextWrapping="Wrap" Grid.Row="1" Grid.Column="1" Foreground="{DynamicResource Brush.Outline}" FontSize="120" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Text=" Papa&#x0a;Koala" RenderTransformOrigin="0.5,0.5">
          <TextBlock.RenderTransform>
            <TransformGroup>
              <RotateTransform Angle="-3"/>
            </TransformGroup>
          </TextBlock.RenderTransform>
        </TextBlock>
      </Grid>
    </Viewbox>
  </Grid>
</Page>