<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:noesis="clr-namespace:NoesisGUIExtensions" 
  mc:Ignorable="d" 
  Style="{DynamicResource Style.Page}" 
  d:DesignWidth="1280" 
  d:DesignHeight="720" Focusable="True">
  <Page.InputBindings>
    <KeyBinding Key="Escape" Command="{Binding CloseCommand}"/>
    <KeyBinding Key="Space" Command="{Binding CloseCommand}"/>
    <MouseBinding MouseAction="LeftClick" Command="{Binding CloseCommand}"/>
  </Page.InputBindings>
  <Page.Resources>
    <ResourceDictionary>
      <Storyboard x:Key="Loaded">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Developer" Storyboard.TargetProperty="(UIElement.Opacity)">
          <LinearDoubleKeyFrame KeyTime="0:0:1" Value="0"/>
          <LinearDoubleKeyFrame KeyTime="0:0:2" Value="1"/>
          <LinearDoubleKeyFrame KeyTime="00:00:03" Value="1"/>
          <LinearDoubleKeyFrame KeyTime="0:0:3.900" Value="0"/>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Logo" Storyboard.TargetProperty="(UIElement.Opacity)">
          <LinearDoubleKeyFrame KeyTime="00:00:04.1000000" Value="0"/>
          <LinearDoubleKeyFrame KeyTime="00:00:05" Value="1"/>
        </DoubleAnimationUsingKeyFrames>
      </Storyboard>
    </ResourceDictionary>
  </Page.Resources>
  <Page.Triggers>
    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
      <BeginStoryboard Storyboard="{StaticResource Loaded}" />
    </EventTrigger>
  </Page.Triggers>
  <Grid Background="{DynamicResource Brush.Background0}">
    <Viewbox>
      <Grid Width="1280" Height="720">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="2*"/>
          <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="1*"/>
          <RowDefinition Height="2*"/>
          <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="Logo"  Grid.Row="1" Grid.Column="1" Opacity="0">
          <Rectangle Fill="{DynamicResource Brush.Highlight}">
            <Rectangle.OpacityMask>
              <ImageBrush ImageSource="Textures/T_Logo_01.png"/>
            </Rectangle.OpacityMask>
          </Rectangle>
          <Rectangle x:Name="Background" Fill="{DynamicResource Brush.Background0}">
            <Rectangle.OpacityMask>
              <ImageBrush ImageSource="Textures/T_Logo_02.png"/>
            </Rectangle.OpacityMask>
          </Rectangle>
          <Rectangle Fill="{DynamicResource Brush.Outline}">
            <Rectangle.OpacityMask>
              <ImageBrush ImageSource="Textures/T_Logo_03.png"/>
            </Rectangle.OpacityMask>
          </Rectangle>
        </Grid>
        <TextBlock x:Name="Developer" TextWrapping="Wrap" Grid.Row="1" Grid.Column="1" Foreground="{DynamicResource Brush.Outline}" FontSize="120" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Text=" Papa&#x0a;Koala" Opacity="0" RenderTransformOrigin="0.5,0.5">
          <TextBlock.RenderTransform>
            <TransformGroup>
              <RotateTransform Angle="-3"/>
            </TransformGroup>
          </TextBlock.RenderTransform>
        </TextBlock>
      </Grid>
    </Viewbox>
  </Grid>
</Page>