<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1920"
  d:DesignHeight="1080">
  <Page.Background>
    <SolidColorBrush Color="#FF4D5052" Opacity="0"/>
  </Page.Background>
  <Page.Resources>
    <ResourceDictionary>
      <Style x:Key="ButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Padding" Value="16,16,16,16"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Super Fortrees"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="Margin" Value="8,8,8,8"/>
        <Setter Property="Background">
          <Setter.Value>
            <SolidColorBrush Color="#FFFFFFFF"/>
          </Setter.Value>
        </Setter>
        <Setter Property="Foreground">
          <Setter.Value>
            <SolidColorBrush Color="#FF000000"/>
          </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
          <Setter.Value>
            <SolidColorBrush Color="#FF000000"/>
          </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="8,8,8,8"/>
      </Style>
    </ResourceDictionary>
  </Page.Resources>
  <Grid>
    <Grid x:Name="Background">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="888*"/>
          <ColumnDefinition Width="1032*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="1*"/>
          <RowDefinition Height="2*"/>
          <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="Logo" Margin="0" Grid.Row="1" Grid.ColumnSpan="2">
          <Grid.Background>
            <ImageBrush ImageSource="T_Logo.png" Stretch="Uniform"/>
          </Grid.Background>
        </Grid>
      </Grid>
      <Grid x:Name="Interface" Margin="64,64,64,64">
        <Grid.RowDefinitions>
          <RowDefinition Height="1*"/>
          <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
          <Button x:Name="NewGame" Content="New Game" Style="{DynamicResource ButtonStyle}" Command="{Binding NewGameCommand}"/>
          <Button x:Name="Continue" Content="Continue" Style="{DynamicResource ButtonStyle}" Visibility="Collapsed"/>
          <Button x:Name="Settings" Content="Settings" Style="{DynamicResource ButtonStyle}"/>
          <Button x:Name="ExitGame" Content="Exit Game" Style="{DynamicResource ButtonStyle}"/>
        </StackPanel>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="2*"/>
          <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
      </Grid>
    </Grid>
  </Grid>
</Page>