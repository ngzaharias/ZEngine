<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1920"
  d:DesignHeight="1080" Style="{DynamicResource Style.Page}">
  <Page.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Themes/Default.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Page.Resources>
  <Grid>
    <Grid x:Name="Background">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="1*"/>
          <RowDefinition Height="2*"/>
          <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Image Source="Textures/T_Logo.png" Grid.Row="1" Margin="480,0"/>
      </Grid>
      <Grid x:Name="Interface" Margin="64,64,64,64">
        <Grid.RowDefinitions>
          <RowDefinition Height="1*"/>
          <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
          <Button x:Name="NewGame" Content="New Game" Style="{StaticResource Style.Button}" Command="{Binding NewGameCommand}"/>
          <Button x:Name="Continue" Content="Continue" Style="{StaticResource Style.Button}" Command="{Binding ContinueGameCommand}" Visibility="Collapsed"/>
          <Button x:Name="LoadGame" Content="Load Game" Style="{StaticResource Style.Button}" Command="{Binding LoadGameCommand}" Visibility="Collapsed"/>
          <Button x:Name="Settings" Content="Settings" Style="{StaticResource Style.Button}" Command="{Binding SettingsCommand}" />
          <Button x:Name="ExitGame" Content="Exit Game" Style="{StaticResource Style.Button}" Command="{Binding ExitGameCommand}" />
        </StackPanel>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="2*"/>
          <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
      </Grid>
    </Grid>
  </Grid>
</Page>