<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1920"
  d:DesignHeight="1080" Style="{DynamicResource Style.Page}" d:DataContext="Default">
  <Page.Resources>
    <ResourceDictionary>
      <Storyboard x:Key="Loaded">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ButtonsA" Storyboard.TargetProperty="(UIElement.Opacity)">
          <LinearDoubleKeyFrame Value="0" KeyTime="0:0:1.500"/>
          <EasingDoubleKeyFrame Value="1" KeyTime="0:0:2.500">
            <EasingDoubleKeyFrame.EasingFunction>
              <SineEase EasingMode="EaseInOut"/>
            </EasingDoubleKeyFrame.EasingFunction>
          </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ButtonsA" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
          <LinearDoubleKeyFrame Value="200" KeyTime="0:0:1.500"/>
          <EasingDoubleKeyFrame Value="0" KeyTime="0:0:2.500">
            <EasingDoubleKeyFrame.EasingFunction>
              <ExponentialEase EasingMode="EaseOut"/>
            </EasingDoubleKeyFrame.EasingFunction>
          </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="(UIElement.Opacity)">
          <LinearDoubleKeyFrame KeyTime="0:0:1" Value="1"/>
          <LinearDoubleKeyFrame KeyTime="0:0:2" Value="0"/>
        </DoubleAnimationUsingKeyFrames>
      </Storyboard>
    </ResourceDictionary>
  </Page.Resources>
  <Page.Triggers>
    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
      <BeginStoryboard Storyboard="{StaticResource Loaded}" />
    </EventTrigger>
  </Page.Triggers>
  <Grid>
    <Viewbox>
      <Grid Height="720" Width="1280">
        <Rectangle x:Name="Background" Fill="{DynamicResource Brush.Background0}"/>
        <Grid x:Name="Logo">
          <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
          </Grid.ColumnDefinitions>
          <Rectangle Fill="{DynamicResource Brush.Highlight}" Grid.Row="1" Grid.Column="1">
            <Rectangle.OpacityMask>
              <ImageBrush ImageSource="Textures/T_Logo_01.png"/>
            </Rectangle.OpacityMask>
          </Rectangle>
          <Rectangle Fill="{DynamicResource Brush.Background0}" Grid.Row="1" Grid.Column="1">
            <Rectangle.OpacityMask>
              <ImageBrush ImageSource="Textures/T_Logo_02.png"/>
            </Rectangle.OpacityMask>
          </Rectangle>
          <Rectangle Fill="{DynamicResource Brush.Outline}" Grid.Row="1" Grid.Column="1">
            <Rectangle.OpacityMask>
              <ImageBrush ImageSource="Textures/T_Logo_03.png"/>
            </Rectangle.OpacityMask>
          </Rectangle>
        </Grid>
        <Grid Margin="64,64,64,64">
          <Grid.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform/>
              <TranslateTransform/>
            </TransformGroup>
          </Grid.RenderTransform>
          <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
          </Grid.RowDefinitions>
          <StackPanel x:Name="ButtonsA" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" Opacity="0" Grid.RowSpan="2">
            <StackPanel.RenderTransform>
              <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform Y="200"/>
              </TransformGroup>
            </StackPanel.RenderTransform>
            <Button Style="{DynamicResource Style.Button}" Command="{Binding NewGameCommand}" Content="Start Game"/>
            <Button Style="{DynamicResource Style.Button}" Command="{Binding SettingsCommand}" Content="Options"/>
            <Button Style="{DynamicResource Style.Button}" Command="{Binding ExitGameCommand}" Content="Exit"/>
          </StackPanel>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
        </Grid>
        <TextBlock Text="{Binding Version}" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Right" Padding="16,16,16,16" Foreground="{DynamicResource Brush.Outline}" FontSize="20"/>
      </Grid>
    </Viewbox>
  </Grid>
</Page>