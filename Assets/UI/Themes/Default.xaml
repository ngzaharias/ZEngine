<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="Default.Brushes.xaml" />
    <ResourceDictionary Source="Default.Fonts.xaml" />
    <ResourceDictionary Source="Default.Styles.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <Style x:Key="Style.Button" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Padding" Value="16,16,16,16"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="Margin" Value="4,4,4,4"/>
    <Setter Property="Background" Value="{DynamicResource Brush.Background0}"/>
    <Setter Property="BorderThickness" Value="4,4,4,4"/>
    <Setter Property="Foreground" Value="{StaticResource Brush.Foreground}"/>
    <Setter Property="BorderBrush" Value="{StaticResource Brush.Foreground}"/>
    <Setter Property="FontSize" Value="20"/>
  </Style>
  <Style x:Key="Style.SubHeader.Text" TargetType="TextBlock">
    <Setter Property="HorizontalAlignment" Value="Left"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Padding" Value="10,4,10,4"/>
    <Setter Property="Foreground" Value="{DynamicResource Brush.Foreground}"/>
  </Style>
  <Style x:Key="Style.SubHeader.Border" TargetType="Border">
    <Setter Property="CornerRadius" Value="4,4,4,4"/>
    <Setter Property="BorderThickness" Value="2,2,2,2"/>
    <Setter Property="Background" Value="{DynamicResource Brush.Background0}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Foreground}"/>
  </Style>
  <Style x:Key="Style.Slider" TargetType="Slider" BasedOn="{StaticResource {x:Type Slider}}">
    <Setter Property="Background" Value="{StaticResource Brush.Background25}"/>
    <Setter Property="Foreground" Value="{StaticResource Brush.Accent}"/>
  </Style>
  <Style x:Key="Style.Header.Border" TargetType="Border">
    <Setter Property="Background" Value="{DynamicResource Brush.Background0}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Foreground}"/>
    <Setter Property="CornerRadius" Value="2,2,0,0"/>
  </Style>
  <Style x:Key="Style.TabControl" TargetType="TabControl" BasedOn="{StaticResource {x:Type TabControl}}">
    <Setter Property="Background" Value="{DynamicResource Brush.Background0}"/>
    <Setter Property="Padding" Value="10,10,10,10"/>
    <Setter Property="ItemTemplate" Value="{DynamicResource Template.TabText}"/>
  </Style>
  <Style x:Key="Style.Property.Text" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Foreground}"/>
  </Style>
  <Style x:Key="Style.Fade" TargetType="Grid">
    <Setter Property="Background" Value="{DynamicResource Brush.Fade}"/>
  </Style>
  <Style x:Key="Style.ComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
    <Setter Property="Background" Value="{DynamicResource Brush.Background0}"/>
    <Setter Property="ItemTemplate" Value="{DynamicResource Template.ComboText}"/>
  </Style>
  <Style x:Key="Style.Page" TargetType="Page" BasedOn="{StaticResource {x:Type Page}}">
    <Setter Property="FontFamily" Value="{DynamicResource Font.Family.Primary}"/>
    <Setter Property="Foreground">
      <Setter.Value>
        <SolidColorBrush Color="#FFFFFFFF"/>
      </Setter.Value>
    </Setter>
  </Style>
  <!--////////////////////////////////////////////////////////////////////////////////////////////////////-->
  <!--Templates-->
  <DataTemplate x:Key="Template.ComboText">
    <TextBlock Text="{Binding Name}" Foreground="{DynamicResource Brush.Foreground}"/>
  </DataTemplate>
  <DataTemplate x:Key="Template.TabText">
    <Grid>
      <TextBlock Text="{Binding}" Foreground="{StaticResource Brush.Foreground}"/>
    </Grid>
  </DataTemplate>
</ResourceDictionary>
